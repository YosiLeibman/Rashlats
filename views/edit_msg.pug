extends layout

block content
    h1 from here you edit your articles
    form(action="/messages/edit/"+message._id, method="post")
        #form-grup
            label Title:
            input.form-control(type="text", name="title" value=message.title)
        #form-grup
            label body:
            textarea.form-control(name="body")=message.body
        input.btn.btn-primary(type="submit", value="submit")